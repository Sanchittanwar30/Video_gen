{
  "name": "remotion-video-generator",
  "version": "1.0.0",
  "description": "Dynamic video generation using Remotion v6+ with template-based rendering",
  "main": "dist/index.js",
  "scripts": {
    "dev": "remotion studio",
    "build": "remotion bundle",
    "render": "ts-node render/index.ts",
    "render:low": "ts-node scripts/render-low-res.ts",
    "preview": "ts-node scripts/preview.ts",
    "typecheck": "tsc",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "start:api": "ts-node server/index.ts",
    "dev:api": "ts-node-dev --respawn server/index.ts",

    "dev:frontend": "cd frontend && npm run dev",
    "postinstall": "patch-package"
  },
  "keywords": [
    "remotion",
    "video",
    "generation",
    "template"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "@excalidraw/excalidraw": "^0.15.0",
    
    "axios": "^1.13.2",
    "bullmq": "^5.3.0",
    "fluent-ffmpeg": "^2.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.11.2",
    "ioredis": "^5.3.2",
    "node-tesseract-ocr": "^2.0.0",
    "multer": "^1.4.5-lts.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@remotion/bundler": "^4.0.373",
    "@remotion/cli": "^4.0.373",
    "@remotion/renderer": "^4.0.373",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "patch-package": "^8.0.1",
    "prettier": "^3.1.0",
    "remotion": "^4.0.373",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
